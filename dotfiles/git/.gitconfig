# Minimal git configuration
# Less but better - core settings, no bloat

[core]
  editor = vi
  pager = less -R
  autocrlf = input

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = yellow
  untracked = red

[alias]
  st = status
  co = checkout
  br = branch
  ci = commit
  lg = log --oneline --graph --decorate
  last = log -1 HEAD
  unstage = reset HEAD --

[pull]
  rebase = false

[push]
  default = simple

[init]
  defaultBranch = main

# Git identity management via includeIf will be added by setup script
# Local overrides
[include]
  path = ~/.gitconfig.local
